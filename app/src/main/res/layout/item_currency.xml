<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currency"
            type="com.kuanyi.data.model.CurrencyModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_8"
            android:gravity="center_vertical"
            android:textSize="@dimen/currency_name_size"
            android:minHeight="@dimen/item_minimum_height"
            app:setCurrencyName="@{currency}"
            tools:text="United Arab Emirates Dirham (AED)" />

        <TextView
            android:id="@+id/txtQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:padding="@dimen/spacing_8"
            android:textSize="@dimen/currency_quote_size"
            tools:text="0.1234" />

    </LinearLayout>
</layout>